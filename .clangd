CompileFlags:
  # Use the compilation database generated by xmake
  CompilationDatabase: .
  # Add XnnTransfer's protobuf generated headers path first (higher priority)
  Add:
    - -Ibuild/.gens/XnnTransfer/windows/x64/release/rules/protobuf/proto
  # Remove tests target include paths
  Remove:
    - "-Ibuild\\.gens\\tests\\*"
    - "/Ibuild\\.gens\\tests\\*"

Diagnostics:
  # Suppress platform-specific warnings
  Suppress: 
    - "drv_unknown_argument"
    - "unused-command-line-argument"
    - "unknown-warning-option"

Index:
  Background: Build

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true