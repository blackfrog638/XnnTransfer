CompileFlags:
  # Use the compilation database generated by xmake
  CompilationDatabase: .

Diagnostics:
  # Suppress platform-specific warnings
  Suppress: 
    - "drv_unknown_argument"
    - "unused-command-line-argument"
    - "unknown-warning-option"

Index:
  Background: Build

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true